{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block body %}
    <h1>Expense</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expense.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ expense.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ expense.description }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ expense.amount }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ expense.category }}</td>
            </tr>
            <tr>
                <th>PaidAt</th>
                <td>{{ expense.paidAt ? expense.paidAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPaid</th>
                <td>{{ expense.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ expense.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_expense_index') }}">back to list</a>

    <a href="{{ path('app_expense_edit', {'id': expense.id}) }}">edit</a>

    {{ include('expense/_delete_form.html.twig') }}
{% endblock %}
